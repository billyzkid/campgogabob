# Root config
root = true

# All files
[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Configuration files
[*.json]
indent_size = 2

# Package files
[{package.json,package-lock.json}]
end_of_line = lf
